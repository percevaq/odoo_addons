<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_home_hr_dashboard"
              name="Portal My Home : HR DashBoard" inherit_id="website_portal_hr.portal_my_home_hr" priority="25">
        <xpath expr="//h3[contains(@class,'page-header')]" position="replace">
            <div class="row" name="hr_dashboard">
                <div class="col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-6">
                                    <i class="fa fa-pencil-square-o fa-5x"/>
                                </div>
                                <div class="col-xs-6 text-right">
                                    <t t-if="contract_count">
                                        <p class='announcement-heading'><t t-esc="contract_count"/></p>
                                        <p class="announcement-text">Contract</p>
                                    </t>
                                    <t t-if="not contract_count">
                                        <p class='announcement-heading'>0</p>
                                        <p class="announcement-text">Contract</p>
                                    </t>
                                </div>
                            </div>
                        </div>
                        <a href="/my/hr/contracts">
                            <div class="panel-footer announcement-bottom">
                                <div class="row">
                                    <div class="col-xs-6">Contracts</div>
                                    <div class="col-xs-6 text-right">
                                        <i class="fa fa-arrow-circle-right"/>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-6">
                                    <i class="fa fa-file-text-o fa-5x"/>
                                </div>
                                <div class="col-xs-6 text-right">
                                    <t t-if="payslip_count">
                                        <p class='announcement-heading'><t t-esc="payslip_count"/></p>
                                        <p class="announcement-text">PaySlips</p>
                                    </t>
                                    <t t-if="not payslip_count">
                                        <p class='announcement-heading'>0</p>
                                        <p class="announcement-text">PaySlips</p>
                                    </t>
                                </div>
                            </div>
                        </div>
                        <a href="/my/hr/payslips">
                            <div class="panel-footer announcement-bottom">
                                <div class="row">
                                    <div class="col-xs-6">PaySlips</div>
                                    <div class="col-xs-6 text-right">
                                        <i class="fa fa-arrow-circle-right"/>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </xpath>
        <xpath expr="//h3[contains(@class,'page-header')]" position="replace">
        </xpath>
    </template>
</odoo>