<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_home_project_dashboard"
              name="Portal My Home : Project DashBoard" inherit_id="website_project.portal_my_home" priority="32">

        <xpath expr="//h3[contains(@class,'page-header')]" position="replace">
        </xpath>

        <xpath expr="//h3[contains(@class,'page-header')]" position="replace">
            <div class="row" name="project_dashboard">
                <div class="col-lg-4">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-6">
                                    <i class="fa fa-puzzle-piece fa-5x"/>
                                </div>
                                <div class="col-xs-6 text-right">
                                    <t t-if="project_count">
                                        <p class='announcement-heading'><t t-esc="project_count"/></p>
                                        <p class="announcement-text">Projects</p>
                                    </t>
                                    <t t-if="not project_count">
                                        <p class='announcement-heading'>0</p>
                                        <p class="announcement-text">Projects</p>
                                    </t>
                                </div>
                            </div>
                        </div>
                        <a href="/my/projects">
                            <div class="panel-footer announcement-bottom">
                                <div class="row">
                                    <div class="col-xs-6">Projects</div>
                                    <div class="col-xs-6 text-right">
                                        <i class="fa fa-arrow-circle-right"/>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-6">
                                    <i class="fa fa-tasks fa-5x"/>
                                </div>
                                <div class="col-xs-6 text-right">
                                    <t t-if="task_count">
                                        <p class='announcement-heading'><t t-esc="task_count"/></p>
                                        <p class="announcement-text">Tasks</p>
                                    </t>
                                    <t t-if="not task_count">
                                        <p class='announcement-heading'>0</p>
                                        <p class="announcement-text">Tasks</p>
                                    </t>
                                </div>
                            </div>
                        </div>
                        <a href="/my/tasks">
                            <div class="panel-footer announcement-bottom">
                                <div class="row">
                                    <div class="col-xs-6">Tasks</div>
                                    <div class="col-xs-6 text-right">
                                        <i class="fa fa-arrow-circle-right"/>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

</odoo>